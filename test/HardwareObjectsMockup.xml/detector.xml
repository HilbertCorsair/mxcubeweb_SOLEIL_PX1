<object class = "DetectorMockup">
  <username>detector</username>
  <object hwrid="TangoMotor" role="detector_distance"/>
  <motor_name>detector_distance</motor_name>
  <actuator_name>detector_distance</actuator_name>
  <tolerance>0.002</tolerance>
  <tangoname>i10-c-cx1/dt/detdist.1-control</tangoname>
  <channel type="tango" polling="500" name="axisPosition">position</channel>
  <channel type="tango" polling="500" name="axisState">State</channel>
  <command type="tango" name="stopAxis">Stop</command>
  <default_limits>[115., 1001.]</default_limits>
  <interval>1000</interval>

  <tempThreshold>33.5</tempThreshold>
  <humidityThreshold>20.0</humidityThreshold>
  <tolerance>0.2</tolerance>
  <type>Eiger2</type>
  <model>9M</model>
  <manufacturer>DECTRIS</manufacturer>
  <px>0.075</px>
  <py>0.075</py>
  <width>3110</width>
  <height>3269</height>
  <hasShutterless>True</hasShutterless>
  <fileSuffix>cbf</fileSuffix>

  <beam>
      <!-- Values are in pixels/mm and pixels resp. -->
    <ax>0.0</ax>
    <ay>0.0402</ay>
    <bx>1565.715</bx>
    <by>1702.058</by>
  </beam>

  <exports>["restart"]</exports>

</object>
